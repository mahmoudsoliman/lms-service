{
  "name": "acme/lms-domain",
  "type": "library",
  "require": {
    "php": ">=8.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "autoload": {
    "psr-4": {
      "Lms\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Lms\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --colors=always",
    "test:unit": "phpunit --colors=always --testsuite unit",
    "test:acceptance": "phpunit --colors=always --testsuite acceptance"
  }
}

